             x:Class="tienda_app2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="pagina principal!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="botones para dirigirce a acciones" FontSize="Title" Padding="30,10,30,10"/>

        <Button Text="inventario" Clicked="btn_inventario"/>
        <Button Text="ventas" Clicked="btn_ventas"/>
        <Button Text="investigacion mercado" Clicked="btn_investigacion_merc"/>
        <Button Text="cambio de informacion" Clicked="btn_cambiar_info"/>
        <Button Text="pedidos" x:Name="btn_pedidos" Clicked="btn_pedidos_Clicked" />
    </StackLayout>

</ContentPage>
